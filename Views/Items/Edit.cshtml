@model YourProjectName.Models.Item

@using System.Text.Json
@{
    Layout = "_Layout";
}

<!-- Vue.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>

<div id="app">
    <h2>Edit Item</h2>
    <form id="vueEditForm">
        <input type="hidden" v-model="item.Id" name="Id" />
        <div class="form-group">
            <label for="name">Name</label>
            <input v-model="item.Name" id="name" name="Name" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/Items" class="btn btn-secondary">Back to List</a>
    </form>
</div>

<script>
    new Vue({
        el: '#app',
        data: {
            item: @Html.Raw(JsonSerializer.Serialize(Model))
        },
        mounted() {
            document.getElementById('vueEditForm').addEventListener('submit', this.submitForm);
        },
        methods: {
            submitForm(e) {
                e.preventDefault();
                fetch('/Items/Edit', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `Id=${encodeURIComponent(this.item.Id)}&Name=${encodeURIComponent(this.item.Name)}`
                })
                .then(res => {
                    if (res.redirected) {
                        window.location = res.url;
                    } else {
                        alert('Failed to update item.');
                    }
                });
            }
        }
    });
</script>
